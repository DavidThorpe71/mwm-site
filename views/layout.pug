doctype html
html
	head
		title= `${title} | ${h.siteName}`
		link(rel="icon" type="image/png" href="images/icons/favicon.ico" sizes="32x32")
		link(rel="stylesheet" href="/dist/owl.theme.default.css")
		link(rel="stylesheet" href="/dist/owl.carousel.min.css")
		script(src="/dist/jquery.min.js")
		link(rel='stylesheet', href='/dist/style.css')
		meta(name='viewport' content='width=device-width, initial-scale=1')
	body
		block header
			header.top
				.header__top
					.header__top--logo
						a(href="/")
							img.logo(src="/images/MWM.jpg", alt="MW Metalworks logo")
					.header__top--info
						h2.name MW Metalworks
						.contacts
							.contacts__email
								a(href="mailto:mwmetalworks@btconnect.com") mwmetalworks@btconnect.com
							.contacts__phone
								a(href="tel:01256331334") 01256 331334
				nav.nav
					.nav__section.nav__section--pages
						each item in h.menu
							li.nav__item
								a.nav__link(href=item.slug, class=(currentPath.startsWith(item.slug) ? 'nav__link--active' : ''))
									//- != h.icon(item.icon)
									span #{item.title}
					if user	
						.nav__section.nav__section--user
							li.nav__item: a.nav__link(href="/add", class=(currentPath.startsWith('/add') ? 'nav__link--active' : ''))
								//- != h.icon('pencil')
								//- span Add
							li.nav__item: a.nav__link(href="/logout", class=(currentPath.startsWith('/logout') ? 'nav__link--active' : ''))
								//- != h.icon('logout')
								//- span Logout
						//- else
						//- 	li.nav__item: a.nav__link(href="/login", class=(currentPath.startsWith('/login') ? 'nav__link--active' : ''))
						//- 		!= h.icon('pencil')
						//- 		span Log In
		block messages
			if locals.flashes
				.inner
					.flash-messages
						- const categories = Object.keys(locals.flashes)
						each category in categories
							each message in flashes[category]
								.flash(class=`flash--${category}`)
									p.flash__text!= message
									button.flash__remove(onClick="this.parentElement.remove()") &times;	

		.content
			block content

		block footer
			footer.bottom
				span Â© Copyright 2017. MW Metalworks Ltd. All Rights Reserved.

		block scripts
			script(src="/dist/owl.carousel.min.js")
			script(src="/dist/masonry.pkgd.min.js")
			script(src="/dist/imagesloaded.pkgd.min.js")
			script(src="/dist/App.bundle.js")